cabal-version:      3.0
name:               miso-invaders
version:            0.2

executable miso-invaders
  hs-source-dirs:   src
  main-is:          Main.hs
  build-depends:    base, containers, miso, random
  default-language: GHC2021
  ghc-options:      -Wall -no-hs-main -optl-mexec-model=reactor "-optl-Wl,--export=hs_start"


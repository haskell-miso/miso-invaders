cabal-version:      3.0
name:               miso-invaders
version:            0.2

executable miso-invaders
  hs-source-dirs:   src
  main-is:          Main.hs
  other-modules:    Game, Point
  build-depends:    base, containers, jsaddle, jsaddle-dom, miso, random
  default-language: GHC2021
  ghc-options:      -Wall -no-hs-main -optl-mexec-model=reactor "-optl-Wl,--export=hs_start"
  cpp-options: -DWASM
 
--  -Wall -Wno-orphans -Wno-missing-methods -Wno-missing-home-modules

